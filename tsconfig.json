{
    "compilerOptions": {
        "baseUrl": "src",
        "target": "es2015",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "types": ["vite-plugin-svgr/client", "vite/client", "node"],
        "paths": {
            "@shared-types/*": ["types/*"],
            "@shared-types": ["types"],
            "@store/*": ["store/*"],
            "@store": ["store"],
            "@api/*": ["api/*"],
            "@api": ["api"],
            "@utils/*": ["utils/*"],
            "@utils": ["utils"],
            "@hooks/*": ["hooks/*"],
            "@hooks": ["hooks"],
            "@views/*": ["views/*"],
            "@views": ["views"],
            "@layouts/*": ["layouts/*"],
            "@layouts": ["layouts"],
            "@router/*": ["router/*"],
            "@router": ["router"],
            "@components/*": ["components/*"],
            "@components": ["components"],
            "@styles/*": ["styles/*"],
            "@styles": ["styles"],
            "@assets/*": ["assets/*"],
            "@assets": ["assets"],
        }
    },
    "include": ["src"],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
